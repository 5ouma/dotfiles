{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>5ouma/utils#v0.8.2"],
  "pre-commit": {
    "enabled": true,
    "managerFilePatterns": ["data/prek.yml"]
  },
  "packageRules": [
    {
      "matchPackageNames": ["Homebrew/actions"],
      "matchUpdateTypes": ["digest"],
      "automerge": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["setup"],
      "matchStrings": ["gumVir='(?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)'"],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "charmbracelet/gum",
      "extractVersionTemplate": "v(?<version>.+)"
    }
  ]
}
