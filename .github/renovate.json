{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>5ouma/utils#v0.1.4"],
  "pre-commit": { "enabled": true, "managerFilePatterns": ["data/pre-commit.yml"] },
  "packageRules": [
    {
      "matchPackageNames": ["Homebrew/actions"],
      "matchUpdateTypes": ["digest"],
      "automerge": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["setup"],
      "matchStrings": ["gumVir='(?<currentValue>.*)'"],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "charmbracelet/gum",
      "extractVersionTemplate": "v(?<version>.*)"
    }
  ]
}
